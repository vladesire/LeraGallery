<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.vladesire.leragallery.MainMenuFragment"
        android:label="MainMenuFragment" >
        <action
            android:id="@+id/choosePhotosGallery"
            app:destination="@id/galleryChooseFragment" />
        <action
            android:id="@+id/showPhotosGrid"
            app:destination="@id/gridFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_swiperFragment"
            app:destination="@id/swiperFragment" />
    </fragment>
    <fragment
        android:id="@+id/galleryChooseFragment"
        android:name="com.vladesire.leragallery.GalleryChooseFragment"
        android:label="GalleryChooseFragment" />
    <fragment
        android:id="@+id/gridFragment"
        android:name="com.vladesire.leragallery.GridFragment"
        android:label="GridFragment" />
    <fragment
        android:id="@+id/swiperFragment"
        android:name="com.vladesire.leragallery.SwiperFragment"
        android:label="fragment_swiper"
        tools:layout="@layout/fragment_swiper" />
</navigation>